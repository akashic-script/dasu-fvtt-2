{
	"name": "dasu",
	"description": "CSS compiler for the DASU system",
	"scripts": {
		"prettier": "prettier --write .",
		"lint": "eslint --fix .",
		"unpack": "node ./tools/pushLDBtoYML.mjs",
		"pack": "node ./tools/pullYMLtoLDB.mjs",
		"prepare": "husky",
		"pre-commit": "lint-staged",
		"createSymlinks": "node ./tools/create-symlinks.mjs"
	},
	"browserslist": [
		"last 3 versions"
	],
	"author": "Spyrella",
	"license": "Apache-2.0",
	"private": true,
	"devDependencies": {
		"@eslint/js": "^9.25.1",
		"@foundryvtt/foundryvtt-cli": "^1.0.4",
		"eslint": "^9.25.1",
		"eslint-config-prettier": "^10.1.2",
		"eslint-plugin-jest": "28.11.0",
		"eslint-plugin-prettier": "5.2.6",
		"globals": "^16.0.0",
		"husky": "^8.0.0",
		"jest": "29.7.0",
		"js-yaml": "^4.1.0",
		"lint-staged": "^15.5.1",
		"prettier": "^3.5.3"
	},
	"lint-staged": {
		"*.{js, jsx,ts,tsx}": [
			"eslint --quiet --fix"
		],
		"*.{json,js,ts,jsx,tsx,html}": [
			"prettier --write --ignore-unknown"
		]
	}
}
